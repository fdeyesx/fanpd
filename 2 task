#include <iostream>
using namespace std;

int main() {    
  cout << "Enter 1st number: ";
  int a;
  cin >> a;

  cout << "Enter 2nd number: ";
  int b;
  cin >> b;

  cout << "Enter operation (o or e): ";
  char operation;
  cin >> operation;

  for (int i = a; i <= b; i++)
  { 
    switch (operation) {
      case 'o':
        if (i % 2 == 1){
        cout << i << endl; }
        break; 
      case 'e':
        if (i % 2 == 0){
        cout << i << endl; } 
        break;
  }
  }

  cout << "There is your answer. =)";
  return 0;
}
